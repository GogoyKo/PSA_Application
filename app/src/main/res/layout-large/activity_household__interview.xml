<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/QR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interview Record"
                    android:textSize="34sp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="true"
               >

                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Household Visit"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="180dp"

                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:text="Date"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Month: Day"
                                />



                            <EditText
                                android:enabled="false"
                                android:id="@+id/Day_1"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Days"
                                />
                            <Button
                                android:id="@+id/Getdate_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get Date"/>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:text="Time Began"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Hour: Minute"
                                />
                            <EditText
                                android:enabled="false"
                                android:id="@+id/Hour_1"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Days"
                                />
                            <Button
                                android:id="@+id/Begandate_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set Time"/>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:text="Time Ended"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Hour: Minute"
                                />
                            <EditText
                                android:enabled="false"
                                android:id="@+id/Hour_2"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Days"
                                />
                            <Button
                                android:id="@+id/get_current_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get Time"/>


                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"

                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Result Of Visit"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="left">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:text="Current:"/>
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/current_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                            <EditText
                                android:id="@+id/Res_1"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                />

                            <Spinner
                                android:id="@+id/Result_1"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/Result_Visit"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:textAlignment="center"
                            android:text="Next Visit"
                            />
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:text="Date"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Month: Day"
                                />
                            <EditText
                                android:id="@+id/Month_2"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Months"
                                />

                            <Button
                                android:id="@+id/get_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get Date"/>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:text="Time"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Hour: Minute"
                                />
                            <EditText
                                android:id="@+id/Hour_3"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Days"
                                />



                            <Button
                                android:id="@+id/get_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get Time"/>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Summary Of Visit"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Number Of Visits Made"
                                />
                            <EditText
                                android:id="@+id/Visit_1"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/OneToTen"
                                android:maxLength="2"
                                android:inputType="number"
                                />


                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Result Of Final Visit"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="left">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:text="Current:"/>
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/current_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                            <EditText
                                android:id="@+id/Res_2"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />

                            <Spinner
                                android:id="@+id/Result_2"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/Result_Visit"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Number Of Household Members"
                                />
                            <EditText
                                android:id="@+id/Household_num1"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Days"
                                android:maxLength="2"
                                />

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Number Males"
                                />
                            <EditText
                                android:id="@+id/Males_num"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Days"
                                android:maxLength="2"
                                />


                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Number Females"
                                />
                            <EditText
                                android:id="@+id/Females_num"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Days"
                                android:maxLength="2"
                                />


                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:cardElevation="8dp">
                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text="Mode Of Data Collection"
                                />
                            <Spinner
                                android:id="@+id/Mode_collection"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/Collection_Mode"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="left">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:text="Current:"/>
                            <TextView
                                android:layout_marginLeft="5dp"
                                android:id="@+id/current_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <EditText
                            android:id="@+id/Mode_Col"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </GridLayout>
            <Button
                android:id="@+id/update_btn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Update"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>