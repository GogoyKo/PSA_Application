                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:text="D2 How many former members of this household have died in the past two years?"
                            />
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:text="SELECT THE CORRESPONDING NUMBER AND FILL OUT THE MATRIX BELOW"
                            />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <EditText
                                android:id="@+id/edit_d2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="" />
                            <Spinner
