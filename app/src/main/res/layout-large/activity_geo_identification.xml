        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/provice"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/province"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="Provice Name"
                   />
                <EditText
                    android:id="@+id/province_num1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                   android:maxLength="8"
                    android:inputType="number"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"


            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/city_municipality"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/municipal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="City Municipal Name" />

                <EditText
                    android:id="@+id/municipal_num1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                   android:maxLength="8"
                    android:inputType="number"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
        >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/barangay"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/barangay"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="@string/barangay_name"
                    />

                <EditText
                    android:id="@+id/barangay_num1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLength="9"
                    android:inputType="number"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"


            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enumeration Area Number"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/enumerator_num1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLength="6"

                    android:inputType="number"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/building_serial_number"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/building_num1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    />



            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/housing_unit_serial_number"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/house_num1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                   android:maxLength="4"
                    android:inputType="number"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/household_serial_number"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/household_num1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                   android:maxLength="4"
                    android:inputType="number"
                    />



            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/line_number_of_the_respondent"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center">



                <EditText
                    android:id="@+id/line_num1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLength="2"
                    android:inputType="number"
                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>



    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:columnCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true"
        android:layout_weight="0">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"


            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_of_the_household_head"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/lastname"
                    android:inputType="text"
                    android:textSize="20sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lastname"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/firstname"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/firstname"
                    android:inputType="text"
                    android:textSize="20sp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/firstname"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </GridLayout>

    <GridLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:columnCount="1"
        android:rowCount="8"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="true"
        android:layout_weight="9">
        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardElevation="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"
                />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center">
                <EditText

                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address"
                    android:inputType="text"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House Building Number And Street Or Sitio Purok Name"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>
    <Button
        android:id="@+id/Proceed"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Proceed"/>
</LinearLayout>
</ScrollView>

</LinearLayout>