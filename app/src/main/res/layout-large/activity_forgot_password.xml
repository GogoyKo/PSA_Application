<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">



    <LinearLayout

        android:background="@drawable/picture_background"
        android:layout_width="500dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"


        android:orientation="vertical"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot password"
            android:textAlignment="center"
            android:layout_margin="30dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#1457e7"

            />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="#14c6da"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your account email to receive a link allowing you to reset your password."
                android:textAlignment="center"
                android:textSize="20dp"/>



        <EditText
            android:id="@+id/etRecipient"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your e-mail"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:drawableLeft="@drawable/email"/>






















        <Button
            android:id="@+id/btnSend"
            android:background="#dcdbdb"
            android:textColor="#1457e7"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:text="Reset my password"/>
    </LinearLayout>


</LinearLayout>