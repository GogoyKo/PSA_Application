<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#16c6da">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:padding="5dp"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:id="@+id/Layout_Menu"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal"
                    android:background="@drawable/menu_background">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="0.3"
                        android:src="@mipmap/ic_launcher_foreground" />
                    <TextView
                        android:textAllCaps="true"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Census of population and housing report"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#fff"/>
                    <ImageView
                        android:layout_weight="0.2"
                        android:id="@+id/menu"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_menu_logo_50dp"
                        android:layout_gravity="center_vertical"



                        />
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:columnCount="2"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="true"
                android:layout_weight="2.8"
                android:padding="2dp"


                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/My_Profile"
                        android:layout_width="250dp"
                        android:layout_height="250dp"

                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="0dp">
                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/my_profilelogo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="My Profile"
                                android:textColor="#000000"
                                android:textAlignment="center"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/ConductSurvey"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="0dp">
                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/survey_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conduct Survey"
                                android:textColor="#000000"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:columnCount="2"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="true"
                android:layout_weight="2.8"
                android:padding="2dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/Scan"

                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="16dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/qrscan_logo" />
                            <TextView
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Scan QR"
                                android:textColor="#000000"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/Manual"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="16dp">
                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/manual_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Manual"
                                android:textColor="#000000"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </GridLayout>
            <GridLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:columnCount="2"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="true"
                android:layout_weight="2.8"
                android:padding="2dp">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/VisitUs"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_row="0"
                        android:layout_column="0">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="16dp">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/visit_logo" />
                            <TextView
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Visit Us"
                                android:textColor="#000000"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/About"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_margin="16dp">
                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/aboutapp_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="About App"
                                android:textColor="#000000"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User ID Number:"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/ID_number"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserIDNumber"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>







